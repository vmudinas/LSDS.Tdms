<div class="pickerSettlementStatus">
    <div id="gridSettlementStatus"></div>
    <div id="chartSettlementStatus"></div>
</div>
<script type="text/x-kendo-template" id="tradeSettlemtToolBar">
    <div class="widgetTitleText">TDMS Trade Settlement Status   <img class="title" src="@Url.Content("~/images/drag_and_drop-128.png" )" /></div>
    <span class="widgetSpanText">Refresh:  </span>
    <select id="settlementStatusRefresh">
        <option value="1" selected>30 sec</option>
        <option value="2">1 min</option>
        <option value="10">5 min</option>
        <option value="60">30 min</option>
        <option value="120">1 hr</option>
    </select>
    <span class="widgetSpanText">Trade data options:  </span>
    <input type="checkbox" id="settlementTotal" class="settlementTotal" />
    <span class="widgetSpanText">Totals   </span>
    <input type="checkbox" id="settlemenetTxtSide" class="settlemenetTxtSide" />
    <span class="widgetSpanText">Txn Side   </span>
    <input type="checkbox" id="settlementNotifyType" class="settlementNotifyType" />
    <span class="widgetSpanText">Notify Type</span>
    <span class="widgetSpanText">Display:</span>
    <img id="idTradeSettlementStatusList" src="@Url.Content("~/images/list_off_20.png")" alt="List Display" />
    <img id="idTradeSettlementStatusBar" src="@Url.Content("~/images/bar_on_20.png")" alt="Bar Chart Display" />
    <img id="idTradeSettlementStatusPie" src="@Url.Content("~/images/pie_on_20.png")" alt="Pie Chart Display" />
</script>
